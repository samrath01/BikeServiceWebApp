@model BikeServiceWebApp.Models.BikeModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <div class="text-center">
        <h1 class="my-font display-4">Bike Model Operations</h1>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BikeModelID" />
                <input type="hidden" asp-for="ExtName" />
                <div class="form-group">
                    <label asp-for="CompanyID" class="control-label"></label>
                    <select asp-for="CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
                    <span asp-validation-for="CompanyID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BikeModelName" class="control-label"></label>
                    <input asp-for="BikeModelName" class="form-control" />
                    <span asp-validation-for="BikeModelName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save Details" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <img src="~/common.png" class="img-fluid" />
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
